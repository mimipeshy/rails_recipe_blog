<div class= "container">
<p id="notice"><%= notice %></p>
<div class="media mt-5">
  <%= image_tag @article.image.url(:medium), class:'d-flex mr-3' %>
  <div class="media-body">
    <h5 class="mt-0 mb-3 font-weight-bold"><%= @article.title.capitalize %></h5>
      <p><%= @article.body%></p>
      <p class="mt-2">
        <strong>Recipe by:</strong>
          <%=@user.name %>
      </p>
       <%= render 'categories/like'%>
  <p>
  <p>
  <strong>Category: </strong>
  <% @article.categories.each do |tag| %>
      <%= link_to tag.name, category_path(tag) %>
    <% end %>
  </p>
 <%= link_to 'Back', articles_path %> 
   <h3>Comments (<%= @article.comments.size %>)</h3> 
  <%= render partial: 'comments/form' %>
  </div>
  
</div>

</div>

